<div class="meta">
  <ul>
	  <%- if session[:login] %>
			<li class="comments"><%= link_to "Edit", edit_post_path(post) %></li>
		<% end -%>
    <li class="comments"> 浏览(<%= post.views_count %>)</li>
    <li class="comments"> 评论(<%= post.approved_comments.size || 0 %>)</li>

    <li class="date">发表于 <%= format_post_date(post.published_at) %></li>
		<% unless post.tags.empty? -%>
      <li class="tags"><%= linked_tag_list(post.tags) %></li>
    <% end -%>
  </ul>
</div>
