<div class="meta">
  <ul>
    <%- if current_user and current_user.admin? %>
      <li class="comments"><%= link_to "edit", edit_post_path(post) %></li>
    <% end -%>
    <li class="comments"> readings(<%= post.views_count %>)</li>
    <li class="comments"> comments(<%= post.approved_comments.size || 0 %>)</li>

    <li class="date">created_at <%= format_post_date(post.published_at || post.created_at) %></li>
    <% unless post.tags.empty? -%>
      <li class="tags"><%= linked_tag_list(post.tags) %></li>
    <% end -%>
  </ul>
</div>