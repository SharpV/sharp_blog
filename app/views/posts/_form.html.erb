<%= javascript_include_tag "showdown", "lang/markedit.lang.zh", "jquery.markedit" %>
<script>
  // Create a MarkEdit editor on page load
  $(function(){
  $('textarea').markedit();
  });
</script>
<style type="text/css">
  textarea { min-height: 350px; }
  .markedit { width: 90%; }
</style>

<%= simple_form_for @post do |f| %>
	<%= render 'error_messages', :object => f.object %>
  <%= f.input :title %>
  <%= f.input :body, :input_html => { :width => 630, :height => 420 } %>
  <%= f.input :published_at %>
  <%= f.input :tag_list %>
  <%= f.button :submit, :class=>'btn btn-primary' %>
<% end %>
