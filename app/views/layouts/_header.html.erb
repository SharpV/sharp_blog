<div class='container'>
  <h4>
    <%= link_to raw(Settings.site_name), root_path, :class => 'brand' %>
  </h4>
  <ul class="nav">
    <li><%= link_to "Posts", posts_path  %></li>
    <li><%= link_to "Archives", archives_path  %></li>
    <li><%= link_to "Comments", comments_path  %></li>
    <%- if session[:login] %>
    <li>
      <%= link_to 'create post', new_post_path %>
    </li>
    <li>
      <%= link_to 'logout', logout_path %>
    </li>
    <% else %>
    <li><%= link_to 'login', new_session_path %></li>
    <% end %>
  </ul>
	
  <div class='pull-right'>
    <%= link_to "RSS订阅", '/posts.atom' %>
  </div>
</div>
